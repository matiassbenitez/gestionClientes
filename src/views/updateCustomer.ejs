  <link rel="stylesheet" href="/css/style.css">
  <link rel="shortcut icon" href="/img/calculator_9403692.png" type="image/x-icon">
</head>
<body>
  <div class="container">
    <% if (zones && zones.length > 0) { %>
      <%- include('partials/_customer-form', { customer: customer, zones: zones }) %>
