<form action="/customers/<%= customer.id %>/transactions/create" method="post">
  <input type="text" name="customer_id" value="<%= customer.id %>" hidden>
  <div>
    <label for="amount">Monto:</label>
    <input type="number" id="amount" name="amount" step="0.01" required>
  </div>
  <div>
    <label for="date">Fecha:</label>
    <input type="date" id="date" name="date" value="" required>
  </div>
  <div>
    <label for="type">Tipo de Movimiento:</label>
    <select id="type" name="type" required>
      <option value="" selected disabled>Tipo de Movimiento</option>
      <option value="Egreso">Venta</option>
      <option value="Ingreso">Entrega</option>
    </select>
  </div>
  <div id="method-container" style="display: none;">
    <label for="method">Método de Pago:</label>
    <select id="method" name="method" required>
      <option value="" selected disabled>Método de Pago</option>
      <option value="Efectivo">Efectivo</option>
      <option value="Tarjeta">Tarjeta</option>
      <option value="Transferencia">Transferencia</option>
    </select>
  </div>
  <button type="submit">Agregar Transacción</button>
  <a href="/customers/<%= customer.id %>" class="btn">Cancelar</a>
</form>