<form action="<%= debt ? '/debts/update/' + debt.id : '/debts/create' %>" method="post">
  <label for="debt_date">Fecha:</label>
  <input type="date" id="debt_date" name="debt_date" value="<%= debt ? debt.debt_date.toISOString().split('T')[0] : '' %>" required>
  <label for="amount">Monto:</label>
  <input type="number" id="amount" name="amount" value="<%= debt ? debt.amount : '' %>" required>
  <button type="submit"><%= debt ? 'Actualizar Deuda' : 'Crear Deuda' %></button>
  <a class="btn" href="/">Volver</a>
</form>
